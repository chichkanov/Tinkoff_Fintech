<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/conversation_form_margin"
        android:background="@drawable/item_conversation_background_mate"
        android:orientation="vertical"
        android:paddingBottom="7dp">

        <TextView
            android:id="@+id/tv_conversation_mate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:textColor="#424242"
            android:textSize="16sp"
            tools:text="ВЫФВЫФВФЫВФЫВЫФВЫФВЫФВЫФВЫФВЫФВЫФВЫФВФЫВ" />

        <TextView
            android:id="@+id/tv_conversation_mate_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingTop="3dp"
            android:textColor="#616161"
            android:textSize="10sp"
            tools:text="16-47" />
    </LinearLayout>
</RelativeLayout>